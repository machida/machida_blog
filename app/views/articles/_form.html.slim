= form_with(model: article, class: 'form') do |form|
  - if article.errors.any?
    div style='color: red'
      h2
        = "#{pluralize(article.errors.count, 'error')} prohibited this article from being saved:"
      ul
        - article.errors.each do |error|
          li = error.full_message

  .form__items
    .form-item
      .form-item__header
        = form.label :title, style: 'display: block'
      .form-item__body
        = form.text_field :title, class: 'a-text-input'

    .form-item
      .form-item__header
        = form.label :body, style: 'display: block'
      .form-item__body
        .markdown-editor
          .markdown-editor__columns
            .markdown-editor__column
              = form.text_area :body, id: 'markdown-editor', class: 'a-text-input markdown-editor__input'
            .markdown-editor__column
              .markdown-editor__preview
                #markdown-editor__preview

    .form-item
      .form-item__header
        = form.label :published_at, style: 'display: block'
      .form-item__body
        = form.datetime_field :published_at, class: 'a-text-input'

    .form-item
      = form.submit 'Draft', name: 'save_as_draft'
      = form.submit '公開', name: 'publish'
